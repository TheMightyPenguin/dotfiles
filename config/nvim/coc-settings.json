{
  "sumneko-lua.enableNvimLuaDev": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "Markdown",
    "json",
    "graphql",
    "html",
    "python"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "eslint.autoFixOnSave": true,
  "emmet.includeLanguages": {
    "html.mustache": "html"
  },
  "html.format.enable": false,
  "languageserver": {
    "ocaml": {
      "command": "ocaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "ocaml",
        "reason"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  },
  "python.linting.flake8Enabled": true
}
